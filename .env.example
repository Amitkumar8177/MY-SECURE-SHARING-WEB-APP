# Example environment variables for the backend
# Copy this to backend/.env and fill in the real values before running.

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/secure-file-sharing

# JWT secret used to sign tokens
JWT_SECRET=replace_with_a_long_random_secret

# Port for backend server
PORT=5000

# Directory where uploaded files are stored (relative to backend/)
UPLOAD_DIR=uploads

# Node environment
NODE_ENV=development

# Frontend client URL (used for CORS or email links)
CLIENT_URL=http://localhost:3000
